<h3><a class="btn btn-secondary" href="/OurRicecol">Create New</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Product List</h3>

<table class="table table-striped">

    <thead>

        <tr>

            <th>Name</th>

            <th>Kgs</th>

            <th>Qty</th>

            <th>Price</th>


        </tr>
        </thead>

    <tbody>

        {{#each list}}

        <tr>

            <td>{{this.Name}}</td>

            <td>{{this.Kgs}}</td>

            <td>{{this.Qty}}</td>

             <td>{{this.Price}}</td>

            <td>

                <a class="btn btn-primary btn-sm" href="/OurRicecol/{{this._id}}">Edit</a>
                  <a class="btn btn-danger btn-sm" href="/OurRicecol/delete/{{this._id}}"

                  onclick="return confirm('Are you sure you want to delete this record ?');">Delete</a>

            </td>

        </tr>

        {{/each}}

    </tbody>

</table>